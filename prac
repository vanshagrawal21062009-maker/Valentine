<script>
document.addEventListener("DOMContentLoaded", () => {

  const noBtn = document.getElementById("no");
  const yesBtn = document.getElementById("yes");
  const card = document.getElementById("card");
  const sadScreen = document.getElementById("sadScreen");
  const backBtn = document.getElementById("back");
  const success = document.getElementById("success");

  const noSound = document.getElementById("noSound");
  const yesSound = document.getElementById("yesSound");

  const sadImg = sadScreen.querySelector("img");
  const sadTitle = sadScreen.querySelector("h1");

  const sadCats = [
    "https://media.giphy.com/media/JIX9t2j0ZTN9S/giphy.gif",
    "https://media.giphy.com/media/ROF8OQvDmxytW/giphy.gif",
    "https://media.giphy.com/media/9Y5BbDSkSTiY8/giphy.gif",
    "https://media.giphy.com/media/l4FGuhL4U2WyjdkaY/giphy.gif",
    "https://media.giphy.com/media/3oriO0OEd9QIDdllqo/giphy.gif"
  ];

  const sadMessages = [
    "That broke my tiny cat heart ðŸ˜¿",
    "Meowâ€¦ that hurt ðŸ¥º",
    "Iâ€™ll just cry quietly nowâ€¦",
    "Why you do this to me ðŸ’”",
    "Sad cat noises intensify ðŸ˜”"
  ];

  function vibrate(p) {
    if (navigator.vibrate) navigator.vibrate(p);
  }

  noBtn.addEventListener("click", () => {
    noSound.play();
    vibrate(120);
    sadImg.src = sadCats[Math.floor(Math.random()*sadCats.length)];
    sadTitle.textContent = sadMessages[Math.floor(Math.random()*sadMessages.length)];
    sadScreen.classList.add("active");
  });

  backBtn.addEventListener("click", () => {
    sadScreen.classList.remove("active");
  });

  yesBtn.addEventListener("click", () => {
    yesSound.play();
    vibrate([100,50,100,200]);
    card.style.display = "none";
    success.style.display = "block";
    startEffects();
  });

  function startEffects() {
    const symbols = ["ðŸ’–","âœ¨","ðŸŽ‰","ðŸ’˜"];
    let count = 0;
    const i = setInterval(() => {
      if (count++ > 60) return clearInterval(i);
      const e = document.createElement("div");
      e.className = "effect";
      e.textContent = symbols[Math.floor(Math.random()*symbols.length)];
      e.style.left = Math.random()*100 + "vw";
      e.style.fontSize = 18 + Math.random()*22 + "px";
      e.style.animationDuration = "3s";
      document.body.appendChild(e);
      setTimeout(()=>e.remove(),3000);
    }, 120);
  }

});
</script>

